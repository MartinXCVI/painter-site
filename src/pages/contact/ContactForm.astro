<section class="contact-wrapper g-0 p-3" data-aos="fade-right" data-aos-duration="1250">
  <form action="" class="contact-form row g-3" id="contact-form">
    <div class="col-12" data-aos="fade-right" data-aos-duration="2000">
      <label for="name-input" class="form-label">Name</label>
      <input type="text" class="form-control" id="name-input" placeholder="Your name here">
    </div>
    <div class="col-12" data-aos="fade-right" data-aos-duration="2250">
      <label for="lastname-input" class="form-label">Last Name</label>
      <input type="text" class="form-control" id="lastname-input" placeholder="Your last name here">
    </div>
    <div class="col-12" data-aos="fade-right" data-aos-duration="2500">
      <label for="email-input" class="form-label">Email</label>
      <input type="email" class="form-control" id="email-input" placeholder="Your email here">
    </div>
    <div class="col-12" data-aos="fade-right" data-aos-duration="2750">
      <label for="subject-input" class="form-label">Subject</label>
      <input type="text" class="form-control" id="subject-input" placeholder="Your subject here">
    </div>
    <div class="col-12" data-aos="fade-right" data-aos-duration="3000">
      <label for="message-input" class="form-label">Message</label>
      <textarea class="form-control" id="message-input" rows="4" placeholder="Your message here"></textarea>
    </div>
    <div class="col-12 contact-btns">
      <button type="submit" class="btn send-btn">Send</button>
      <button type="reset" class="btn reset-btn">Reset</button>
    </div>
  </form>
</section>